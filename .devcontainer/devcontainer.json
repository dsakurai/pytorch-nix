{
    "name": "Dev Container",
    "build": {
      "dockerfile": "Dockerfile"
    },
    "remoteUser": "vscode",
    "containerEnv": {
        "HOME": "/home/vscode"
    },

    "runArgs": [
        "--userns=keep-id",
        "--volume=${localWorkspaceFolder}/nix:/nix:z"

        // X11
        // NOT WORKING. Check out Toolbox: https://github.com/containers/toolbox/issues/610
        // "--uidmap", "1000:0:1",
        // "--uidmap", "0:1:1000",
        // "-e", "DISPLAY",
        // "--net=host",
        // "--volume=${localEnv:XAUTHORITY}:/home/vscode/.Xauthority:Z"
    ],

    // Install nix
    "postCreateCommand": "/workspaces/${localWorkspaceFolderBasename}/.devcontainer/postCreate.sh",

    "customizations": {
        "vscode": {
            "extensions": [
            ]
        }
    }
}
